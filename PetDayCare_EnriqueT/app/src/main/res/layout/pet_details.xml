<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:id="@+id/SecondContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/NameContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NameContainerTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="General"
                android:textColor="#ec5449"
                android:textSize="15sp"
                tools:ignore="NestedWeights" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:gravity="center_vertical"
                android:hint="Nombre"
                android:inputType="text"
                android:maxLength="25"
                android:maxLines="1"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/BreedContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/BreedContainerTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights" />

            <EditText
                android:id="@+id/Breed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:gravity="center_vertical"
                android:hint="Raza"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/GenderContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/GenderContainerTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="Género"
                android:textColor="#ec5449"
                android:textSize="15sp"
                tools:ignore="NestedWeights" />

            <Spinner
                android:id="@+id/Gender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/WeigthContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/WeigthContainerTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="Constitución"
                android:textColor="#ec5449"
                android:textSize="15sp"
                tools:ignore="NestedWeights" />

            <EditText
                android:id="@+id/Weigth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:hint="Peso"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:maxLines="1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/WeigthUnits"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center"
                android:text="Kg"
                android:textColor="@android:color/black"
                android:textSize="12.5sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/UpdatePetButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60">

            <Button
                android:id="@+id/UpdatePet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#ec5449"
                android:gravity="center"
                android:padding="15dp"
                android:text="Guardar"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>